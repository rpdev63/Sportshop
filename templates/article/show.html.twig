{% extends 'base.html.twig' %}


{% block title %}
	{{pageTitle}}
{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('css/table.css') }} ">
{% endblock %}

{% block body %}
    
    
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ article.name }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ article.reference }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ article.price }}</td>
            </tr>
            <tr>
                <th>OldPrice</th>
                <td>{{ article.oldPrice }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ article.img }}</td>
            </tr>
            <tr>
                <th>Rate</th>
                <td>{{ article.rate }}</td>
            </tr>
            <tr>
                <th>IsNew</th>
                <td>{{ article.isNew ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Categorie(s)</th>
                <td>
                    {% for category in article.categories %}
                        {{category.name}}
                    {% endfor %}
                </td>      
            </tr>      
            <tr>
                <th>Brand</th>
                <td>{{ article.brand.name }}</td>
            </tr>
        </tbody>
    </table>
    <div class="back">
			<a href="{{path('article')}}">Retourner vers la liste d'articles</a> <br>
            <a href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>
            {{ include('article/_delete_form.html.twig') }}
	</div>

   
    

    

    
{% endblock %}
