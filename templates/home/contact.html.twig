{% extends 'base.html.twig' %}

{% block title %}
	{{pageTitle}}
{% endblock %}

{% block body %}
	
    <div class="form-contact">
		<div>
			{{ form_start(form) }}
			<div class="form-group">
				{{ form_widget(form.civilite) }}
			</div>

			<div class="form-group">
				{{ form_row(form.prenom,  {'attr' : {'class': 'form-control'}, 'label': 'Prénom'}) }}
			</div>

			<div class="form-group">
				{{ form_row(form.nom, {'attr' : {'class': 'form-control'}}) }}
			</div>

			<div class="form-group">
				{{ form_row(form.email, {'attr' : {'class': 'form-control'}}) }}
			</div>

			<div class="form-group">
				{{ form_row(form.numeroCommande, {'attr' : {'class': 'form-control'}, 'label': 'Numéro de commande'}) }}
			</div>

			<div class="form-group">
				{{ form_row(form.motif, {'attr' : {'class': 'form-control'}}) }}
			</div>

			<div class="form-group">
				{{ form_row(form.message, {'attr': {'class': 'form-control', 'placeholder' : 'Mon problème en détail ici'}}) }}
			</div>


			{{ form_end(form) }}
		</div>
	</div>


	


{% endblock %}
